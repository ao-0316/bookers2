<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/0e1ec59f06.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>







  <body>
    <header>
      <nav class="navar navar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <div class="header row px-3 py-4">
            <div class="col-2"><%=link_to "Bookers",root_path %></a>
          </div>





           <div class="col-6 offset-4">
             <div class="row">



      <% if user_signed_in? %>
         <i class="fa-solid fa-house"></i><%=link_to "Home",user_path(current_user.id)%>
          <i class="fa-solid fa-users"></i><%=link_to "Users",users_path %>
         <i class="fa-solid fa-book-open"></i> <%= link_to 'Books', books_path %>
          <i class="fa-solid fa-right-from-bracket"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %>

      <% else %>
          <i class="fa-solid fa-house"></i><%=link_to "Home",root_path %>
          <i class="fa-solid fa-link"></i><%= link_to 'About', home_about_path %>
          <i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path %>
          <i class="fa-solid fa-right-to-bracket"></i><%= link_to "Log in", new_user_session_path %>


      <% end %>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>






    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class"mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
