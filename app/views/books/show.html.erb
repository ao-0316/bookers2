<h1>Books</h1>

<% @books.each do |book| %>

  <% if book.image.attached? %>
    <%= image_tag book.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

 <%=link_to book.user.name,users_show_path(book.user.id) %>
 
 <%=link_to book.title,books_path(book.id) %>
 
 <%= book.body %>
 
 <%= link_to "Edit",edit_book_path(book.id) %>
 
 <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>

<% end %>



<h1>User info</h1>

<% if current_user.image.attached? %>
    <%= image_tag current_user.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>


name <%=current_user.name%>

<%=current_user.introduction%>

<%=link_to edit_user_path(current_user.id) do %>
<i class="fas fa-user-cog"></i>
<% end %>









<%= form_with model: @book do |f| %>


  
  <h1>New book</h1>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
